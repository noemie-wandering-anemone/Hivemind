    <label for="1week">1 Week</label>
    <input type="radio" id="2weeks" name="duration" value="14">
    <label for="2weeks">2 Weeks</label>
    
    <!--Add options to add pics, sounds, ...-->
    <input type="submit" name="" value="Create Hive!">
</form>