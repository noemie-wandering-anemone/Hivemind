<form action="/ask" method="post">
    <label for="question">
        <input type="text" name="question" value="question">
        <!--take value from req.body-->
    </label>
    <label for="explanation">
        <input type="text" name="explanation" value="Maybe you want to give some context to your question?">
    </label>
